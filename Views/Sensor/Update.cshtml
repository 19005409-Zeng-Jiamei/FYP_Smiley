@model Sensor

@{
    ViewData["Title"] = "Update Sensor";
}

@section ScriptSection {
    <script>

        $(document).ready(function () {
            $("form").submit(function () {
                confirm("Proceed? Press OK to confirm.");
            });
        });

    </script>
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-7">
        <form asp-controller="Sensor" asp-action="Update" method="post" class="form-horizontal" role="form">
            <div class="form-horizontal">

                <div class="form-group">
                    <label asp-for="SensorId" class="col-sm-3 control-label">Sensor Id</label>
                    <div class="col-sm-6">
                        <input id="txtSI" asp-for="SensorId" class="form-control" />
                    </div>

                </div>

                <partial name="_Sensor" />

                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-10">
                        <input type="submit" value="Update" class="btn btn-default" />
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
